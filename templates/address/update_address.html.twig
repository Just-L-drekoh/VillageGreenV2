{% extends 'base.html.twig' %}

{% block title %}Formulaire d'Adresse
{% endblock %}

{% block body %}
	<main class="min-h-screen bg-gradient-to-r from-blue-100 via-purple-100 to-pink-100 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
		<div class="max-w-lg w-full bg-white shadow-lg rounded-lg p-8 space-y-6">
			<header class="text-center mb-6">
				<h1 class="text-3xl font-semibold text-gray-800">Formulaire d'Adresse</h1>
				<p class="text-sm text-gray-600">Ajoutez ou mettez à jour vos adresses de livraison ou de facturation.</p>
			</header>

			{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

			<section>
				<label for="{{ form.type.vars.id }}" class="block text-sm font-medium text-gray-700">Type d'Adresse</label>
				<p class="text-sm text-gray-500">Choisissez entre une adresse de livraison ou de facturation.</p>
				{{ form_widget(form.type, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500'}}) }}
				<div class="text-sm text-red-500 mt-1">{{ form_errors(form.type) }}</div>
			</section>

			<section>
				<label for="{{ form.city.vars.id }}" class="block text-sm font-medium text-gray-700">Ville</label>
				<p class="text-sm text-gray-500">Indiquez la ville associée à cette adresse.</p>
				{{ form_widget(form.city, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500'}}) }}
				<div class="text-sm text-red-500 mt-1">{{ form_errors(form.city) }}</div>
			</section>

			<section>
				<label for="{{ form.address.vars.id }}" class="block text-sm font-medium text-gray-700">Adresse</label>
				<p class="text-sm text-gray-500">Saisissez l'adresse complète (ex : 12 rue des Fleurs).</p>
				{{ form_widget(form.address, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500'}}) }}
				<div class="text-sm text-red-500 mt-1">{{ form_errors(form.address) }}</div>
			</section>

			<section>
				<label for="{{ form.cp.vars.id }}" class="block text-sm font-medium text-gray-700">Code Postal</label>
				<p class="text-sm text-gray-500">Entrez le code postal de la ville (ex : 75001).</p>
				{{ form_widget(form.cp, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500'}}) }}
				<div class="text-sm text-red-500 mt-1">{{ form_errors(form.cp) }}</div>
			</section>

			<section class="flex items-center">
				{{ form_widget(form.isDefault, {'attr': {'class': 'h-4 w-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500'}}) }}
				<label for="{{ form.isDefault.vars.id }}" class="ml-2 text-sm text-gray-700">Définir comme adresse par défaut</label>
				<div class="text-sm text-red-500 mt-1">{{ form_errors(form.isDefault) }}</div>
			</section>

			<section>
				<label for="{{ form.complement.vars.id }}" class="block text-sm font-medium text-gray-700">Complément d'Adresse (Optionnel)</label>
				<p class="text-sm text-gray-500">Ajoutez des précisions si nécessaire (ex : étage, bâtiment).</p>
				{{ form_widget(form.complement, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500'}}) }}
				<div class="text-sm text-red-500 mt-1">{{ form_errors(form.complement) }}</div>
			</section>

			<section>
				<button type="submit" class="w-full inline-flex justify-center py-3 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
					Enregistrer l'Adresse
				</button>
			</section>

			{{ form_end(form) }}
		</div>
	</main>
{% endblock %}

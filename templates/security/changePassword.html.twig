{% extends 'base.html.twig' %}

{% block title %}Changer mon mot de passe
{% endblock %}

{% block body %}
	<div class="container mx-auto mt-12 p-6 bg-gray-100 shadow-lg rounded-xl">
		<h1 class="text-4xl font-bold text-gray-800 text-center mb-6">Changer mon mot de passe</h1>

		{{ form_start(form, {
            attr: { class: 'max-w-md mx-auto' }
        }) }}

		<div class="mb-4">
			{{ form_label(form.currentPassword, 'Mot de passe actuel', { 
                    label_attr: { class: 'block text-sm font-medium text-gray-700' }
                }) }}
			{{ form_widget(form.currentPassword, { 
                    attr: { class: 'mt-1 p-2 border border-gray-300 rounded-md w-full' }
                }) }}
			{{ form_errors(form.currentPassword) }}
		</div>

		<div class="mb-4">
			{{ form_label(form.newPassword, 'Nouveau mot de passe', { 
                    label_attr: { class: 'block text-sm font-medium text-gray-700' }
                }) }}
			{{ form_widget(form.newPassword, { 
                    attr: { class: 'mt-1 p-2 border border-gray-300 rounded-md w-full' }
                }) }}
			{{ form_errors(form.newPassword) }}
		</div>

		<div class="mb-4">
			{{ form_label(form.confirmPassword, 'Confirmer le nouveau mot de passe', { 
                    label_attr: { class: 'block text-sm font-medium text-gray-700' }
                }) }}
			{{ form_widget(form.confirmPassword, { 
                    attr: { class: 'mt-1 p-2 border border-gray-300 rounded-md w-full' }
                }) }}
			{{ form_errors(form.confirmPassword) }}
		</div>

		<button type="submit" class="w-full bg-blue-600 text-white py-2 rounded shadow-md hover:bg-blue-700 transition duration-300">
			{{ form_end(form) }}

		</button>

	</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Changer mon mot de passe
{% endblock %}

{% block body %}
	<div class="flex items-center justify-center min-h-screen bg-gradient-to-r from-blue-100 via-purple-100 to-pink-100">
		<div class="bg-white shadow-xl rounded-lg p-8 w-full max-w-md">
			<h1 class="text-4xl font-extrabold text-gray-800 text-center mb-6">Changer mon mot de passe</h1>

			{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

			<div>
				{{ form_label(form.currentPassword, 'Mot de passe actuel', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
				{{ form_widget(form.currentPassword, {'attr': {'class': 'mt-1 w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none'}}) }}
				{{ form_errors(form.currentPassword) }}
			</div>

			<div>
				{{ form_label(form.newPassword, 'Nouveau mot de passe', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
				{{ form_widget(form.newPassword, {'attr': {'class': 'mt-1 w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none'}}) }}
				{{ form_errors(form.newPassword) }}
			</div>

			<div>
				{{ form_label(form.confirmPassword, 'Confirmer le nouveau mot de passe', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
				{{ form_widget(form.confirmPassword, {'attr': {'class': 'mt-1 w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none'}}) }}
				{{ form_errors(form.confirmPassword) }}
			</div>

			<div class="pt-4">
				<button type="submit" class="w-full bg-blue-600 text-white font-medium py-3 px-6 rounded-lg shadow-md transition-transform transform hover:scale-105 hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 focus:outline-none">
					Enregistrer
				</button>
			</div>

			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}

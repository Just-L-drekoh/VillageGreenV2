{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<div class="flex items-center justify-center min-h-screen bg-gradient-to-r from-blue-100 via-purple-100 to-pink-100">
		<div class="bg-white shadow-xl rounded-lg p-8 w-full max-w-md">
			<h1 class="text-3xl font-extrabold text-center text-gray-800 mb-6">Créer un compte</h1>

			{{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}

			<div class="grid grid-cols-2 gap-4">
				{{ form_row(registrationForm.firstName, {'attr': {'class': 'w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none'}}) }}
				{{ form_row(registrationForm.lastName, {'attr': {'class': 'w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none'}}) }}
			</div>

			{{ form_row(registrationForm.phone, {'attr': {'class': 'w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none'}}) }}
			{{ form_row(registrationForm.email, {'attr': {'class': 'w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none'}}) }}

			<div class="border rounded-lg p-4 bg-gray-50">
				<h2 class="text-sm font-semibold text-gray-600 mb-2">Optionnel : Professionnels uniquement</h2>
				<p class="text-sm text-gray-500 mb-3">Si vous êtes un professionnel, renseignez votre numéro SIRET.</p>
				{{ form_row(registrationForm.siret, {'attr': {'class': 'w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none'}}) }}
			</div>

			{{ form_row(registrationForm.plainPassword, {'attr': {'class': 'w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none'}}) }}
			{{ form_row(registrationForm.confirmPassword, {'attr': {'class': 'w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none'}}) }}

			<div class="flex items-center">
				{{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'h-4 w-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500'}}) }}
				<label for="{{ registrationForm.agreeTerms.vars.id }}" class="ml-2 text-sm text-gray-700">J'accepte les
					<a href="#" class="text-indigo-600 hover:underline">conditions générales</a>.</label>
			</div>

			<button type="submit" class="w-full bg-indigo-600 text-white font-semibold py-3 rounded-lg shadow-md hover:bg-indigo-700 focus:ring-4 focus:ring-indigo-300 transition-transform transform hover:scale-105">
				Créer un compte
			</button>
			{{ form_end(registrationForm) }}

			<p class="text-center text-sm text-gray-600 mt-6">
				Vous avez déjà un compte ?
				<a href="{{ path('app_login') }}" class="text-indigo-600 font-medium hover:underline">Se connecter</a>
			</p>
		</div>
	</div>
{% endblock %}

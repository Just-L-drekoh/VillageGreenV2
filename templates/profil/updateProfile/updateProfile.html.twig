{% extends 'base.html.twig' %}

{% block title %}Modifier votre Profil
{% endblock %}

{% block body %}
	<div class="container mx-auto mt-12 p-6 rounded-lg flex items-center justify-center min-h-screen bg-gradient-to-r from-blue-100 via-purple-100 to-pink-100">
		<div class="bg-white shadow-xl rounded-lg p-8 w-full max-w-lg">
			<h1 class="text-4xl font-extrabold text-gray-800 mb-6 text-center">Modifier votre Profil</h1>
			<p class="text-gray-500 text-center mb-6">Mettez Ã  jour vos informations personnelles facilement.</p>

			<div>
				{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

				{{ form_row(form.email, {'attr': {'class': 'form-input w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none'}}) }}
				{{ form_row(form.firstName, {'attr': {'class': 'form-input w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none'}}) }}
				{{ form_row(form.lastName, {'attr': {'class': 'form-input w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none'}}) }}
				{{ form_row(form.phone, {'attr': {'class': 'form-input w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none'}}) }}

				<div class="mt-8">
					<button type="submit" class="w-full bg-blue-500 text-white font-medium py-3 px-6 rounded-lg shadow-md transition-transform transform hover:scale-105 hover:bg-blue-600 focus:ring-4 focus:ring-blue-300 focus:outline-none">
						Enregistrer
					</button>
				</div>

				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}

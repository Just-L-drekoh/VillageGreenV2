{% extends 'base.html.twig' %}

{% block body %}
	<div class="max-w-4xl mx-auto p-6 bg-white rounded-lg shadow-md">
		<h1 class="text-2xl font-bold text-gray-800 mb-6">Formulaire d'Adresse</h1>

		{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

		<div>
			<label for="{{ form.type.vars.id }}" class="block text-sm font-medium text-gray-700">
				Type d'Adresse
			</label>
			{{ form_widget(form.type, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500'}}) }}
			{{ form_errors(form.type) }}
		</div>

		<div>
			<label for="{{ form.city.vars.id }}" class="block text-sm font-medium text-gray-700">
				Ville
			</label>
			{{ form_widget(form.city, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500'}}) }}
			{{ form_errors(form.city) }}
		</div>

		<div>
			<label for="{{ form.address.vars.id }}" class="block text-sm font-medium text-gray-700">
				Adresse
			</label>
			{{ form_widget(form.address, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500'}}) }}
			{{ form_errors(form.address) }}
		</div>

		<div>
			<label for="{{ form.cp.vars.id }}" class="block text-sm font-medium text-gray-700">
				Code Postal
			</label>
			{{ form_widget(form.cp, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500'}}) }}
			{{ form_errors(form.cp) }}
		</div>

		<div class="flex items-center">
			{{ form_widget(form.isDefault, {'attr': {'class': 'h-4 w-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500'}}) }}
			<label for="{{ form.isDefault.vars.id }}" class="ml-2 block text-sm text-gray-700">
				Adresse par défaut
			</label>
			{{ form_errors(form.isDefault) }}
		</div>

		<div>
			<label for="{{ form.complement.vars.id }}" class="block text-sm font-medium text-gray-700">
				Complément d'Adresse (Optionnel)
			</label>
			{{ form_widget(form.complement, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500'}}) }}
			{{ form_errors(form.complement) }}
		</div>

		<div>
			<button type="submit" class="w-full inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
				Enregistrer
			</button>
		</div>

		{{ form_end(form) }}
	</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Contact
{% endblock %}

{% block body %}
	<div class="max-w-4xl mx-auto mt-10">
		<h1 class="text-2xl font-bold mb-6">Formulaire de contact</h1>

		<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
			{{ form_start(form, { 'attr': { 'class': 'space-y-6' } }) }}
			<div>
				{{ form_label(form.firstName, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700' } }) }}
				{{ form_widget(form.firstName, { 'attr': { 'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' } }) }}
				{{ form_errors(form.firstName, { 'attr': { 'class': 'text-sm text-red-600 mt-2' } }) }}
			</div>

			<div>
				{{ form_label(form.lastName, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700' } }) }}
				{{ form_widget(form.lastName, { 'attr': { 'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' } }) }}
				{{ form_errors(form.lastName, { 'attr': { 'class': 'text-sm text-red-600 mt-2' } }) }}
			</div>

			<div>
				{{ form_label(form.email, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700' } }) }}
				{{ form_widget(form.email, { 'attr': { 'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' } }) }}
				{{ form_errors(form.email, { 'attr': { 'class': 'text-sm text-red-600 mt-2' } }) }}
			</div>

			<div>
				{{ form_label(form.subject, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700' } }) }}
				{{ form_widget(form.subject, { 'attr': { 'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' } }) }}
				{{ form_errors(form.subject, { 'attr': { 'class': 'text-sm text-red-600 mt-2' } }) }}
			</div>

			<div>
				{{ form_label(form.message, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700' } }) }}
				{{ form_widget(form.message, { 'attr': { 'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' } }) }}
				{{ form_errors(form.message, { 'attr': { 'class': 'text-sm text-red-600 mt-2' } }) }}
			</div>

			<div>
				{{ form_widget(form.send, { 'attr': { 'class': 'inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' } }) }}
			</div>

			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}

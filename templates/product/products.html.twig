{% extends 'base.html.twig' %}

{% block title %}Instruments - Catalogue
{% endblock %}

{% block body %}
	<div class="container mx-auto mt-16 p-8">
		<div class="text-center mb-16">
			<h1 class="text-5xl font-extrabold tracking-tight text-gray-800">Explorez nos Instruments</h1>
			<p class="mt-4 text-lg text-gray-600">Découvrez notre large sélection d'instruments de qualité.</p>
		</div>

		<div class="flex justify-center mb-12">
			<div class="bg-gradient-to-r from-blue-50 via-indigo-100 to-pink-100 px-6 py-3 rounded-full shadow-md">
				{{ knp_pagination_render(products) }}
			</div>
		</div>

		<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-10">
			{% for product in products %}
				<div class="group relative bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-shadow duration-300">
					<div class="overflow-hidden rounded-t-2xl">
						{% if product.image|length > 0 %}
							<img src="{{ product.image[0].img }}" alt="{{ product.label }}" class="w-full h-56 object-cover group-hover:scale-110 transition-transform duration-300">
						{% endif %}
					</div>

					<div class="p-6">
						<p class="text-sm font-medium text-gray-500 uppercase tracking-wider">
							{{ product.rubric.label }}
						</p>
						<h2 class="mt-2 text-xl font-bold text-gray-800">{{ product.label }}</h2>
						<p class="mt-4 text-gray-600 line-clamp-3">{{ product.content }}</p>

						<div class="mt-6">
							<p class="text-lg font-semibold text-indigo-600">{{ product.price }}
								&euro; HT</p>
						</div>

						<div class="mt-6 flex space-x-4">
							<a href="{{ path('product_details', {'slug': product.slug}) }}" class="flex-1 px-4 py-2 text-center bg-yellow-500 text-white font-medium rounded-lg shadow-md
																		                                  hover:bg-yellow-600 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-yellow-300">
								Détails
							</a>
							<a href="{{ path('cart_add', {'id': product.id}) }}" class="flex-1 px-4 py-2 text-center bg-blue-600 text-white font-medium rounded-lg shadow-md
																		                                  hover:bg-blue-700 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-400">
								Ajouter
							</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>

		<div class="flex justify-center mt-16">
			<div class="bg-gradient-to-r from-blue-50 via-indigo-100 to-pink-100 px-6 py-3 rounded-full shadow-md">
				{{ knp_pagination_render(products) }}
			</div>
		</div>
	</div>
{% endblock %}

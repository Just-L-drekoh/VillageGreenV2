{% extends 'base.html.twig' %}

{% block title %}
	{{ product.label }}
{% endblock %}

{% block body %}
	<div class="container mx-auto mt-12 p-6 bg-gray-100 shadow-lg rounded-xl">
		<div class="bg-white p-8 rounded-lg shadow-md">
			<div class="mb-6">
				<h1 class="text-4xl font-bold text-gray-800">{{ product.label }}</h1>
				<p class="text-gray-500 mt-2">Référence :
					<span class="font-medium">{{ product.ref }}</span>
				</p>
				<p class="text-gray-500">Fournisseur :
					<span class="font-medium">{{ product.supplier.ref }}</span>
				</p>
				<p class="text-gray-500">Rubriques :
					<span class="font-medium">{{ product.rubric.label }}</span>
				</p>
			</div>

			{% for image in product.image %}
				<div class="mb-6">
					<img src="{{ image.img }}" alt="{{ product.label }}" class="w-full h-64 object-cover rounded-lg shadow-lg">
				</div>
			{% endfor %}

			<div class="mb-6">
				<h2 class="text-2xl font-semibold text-gray-800 mb-3">Description</h2>
				<p class="text-gray-600">{{ product.content }}</p>
			</div>

			<div class="mb-6">
				<h2 class="text-2xl font-semibold text-gray-800 mb-3">Poids Net</h2>
				<p class="text-gray-600">{{ product.weight }}
					Kg</p>
			</div>

			<div class="mb-6">
				<h2 class="text-2xl font-semibold text-gray-800 mb-3">Prix</h2>
				<p class="text-lg font-bold text-gray-800">{{ product.price }}
					€ HT</p>
			</div>

			{% if is_granted('ROLE_ADMIN') %}
				<div class="mb-6">
					<h2 class="text-2xl font-semibold text-gray-800 mb-3">Autres Informations</h2>
					<ul class="list-disc list-inside text-gray-600">
						<li>Stock :
							{{ product.stock }}</li>

					</ul>
				</div>
			{% endif %}
			<a href="{{ path('app_productDetails', {'slug': product.slug}) }}" class=" px-4 py-2 bg-yellow-600 text-white rounded hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
				Voir l'instrument
			</a>

		</div>
	</div>
{% endblock %}

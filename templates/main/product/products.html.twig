{% extends 'base.html.twig' %}

{% block title %}Tous nos Instruments
{% endblock %}

{% block body %}
	<div class="container mx-auto mt-12 p-6 bg-gray-100 shadow-lg rounded-xl">
		<h1 class="text-4xl font-bold text-gray-800 text-center mb-6">Tous nos Instruments</h1>

		<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
			{% for product in products %}
				<div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
					<p class="text-xs text-gray-500 uppercase tracking-wide">Référence :
						{{ product.ref }}</p>
					<p class="text-xs text-gray-500 uppercase tracking-wide mb-2">Fournisseur :
						{{ product.supplier.ref }}</p>
					<p class="text-xs text-gray-500 uppercase tracking-wide mb-2">rubrique :
						{{ product.rubric.label }}</p>
					<h2 class="text-xl font-semibold text-gray-800 mb-4">{{ product.label }}</h2>

					{% if product.image|length > 0 %}
						<div class="overflow-hidden rounded-lg mb-4">
							<img src="{{ product.image[0].img }}" alt="{{ product.label }}" class="w-full h-48 object-cover hover:scale-105 transition-transform duration-300">
						</div>
					{% endif %}

					<p class="text-gray-600 mb-4">{{ product.content }}</p>
					<p class="text-lg font-bold text-gray-800">Prix :
						{{ product.price }}
						€ HT</p>

					<p class="text-lg font-bold text-gray-800">Prix :
						{{ (product.price * product.tax.rate / 100) + product.price }}
						€ TTC
					</p>


					<div class="mt-6 flex justify-between">
						<a href="{{ path('app_productDetails', {'slug': product.slug}) }}" class=" px-4 py-2 bg-yellow-600 text-white rounded-lg hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
							Voir l'instrument
						</a>

						<a href="#" class="inline-block px-4 py-2 bg-blue-600 text-white font-semibold text-sm rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-75">
							Ajouter au panier
						</a>
					</div>


				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}

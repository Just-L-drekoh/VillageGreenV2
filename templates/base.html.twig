<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
		{{ encore_entry_link_tags('app') }}

		{% block stylesheets %}{% endblock %}
		{{ encore_entry_script_tags('app') }}
		{{encore_entry_script_tags('navbar') }}

		{% block javascripts %}{% endblock %}
	</head>
	<body>
		{% include 'partials/_navbar.html.twig' %}
		{% for label, messages in app.flashes %}
			{% for message in messages %}
				<div class="text-center py-2">
					<div class="
						                p-4 rounded-lg flex items-center justify-center text-white
						                {% if label == 'success' %} bg-green-500 {% elseif label == 'error' %} bg-red-500 {% elseif label == 'info' %} bg-blue-500 {% elseif label == 'warning' %} bg-yellow-500 {% endif %}
						            " role="alert">
						<span class="font-semibold text-sm">
							{{ message | raw }}
						</span>
					</div>
				</div>
			{% endfor %}
		{% endfor %}


		{% block body %}{% endblock %}

		{# {% include 'partials/_footer.html.twig' %} #}
	</body>
</html>
